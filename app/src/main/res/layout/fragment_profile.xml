<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profil Anda."
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:id="@+id/imgbtn_logout"
                android:layout_marginLeft="215dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_green"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline"
            android:text="Username Seseorang"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_username"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline"
            android:text="**********"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline"
            android:text="Nama Seseorang"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline"
            android:text="0812-3456-7890"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_phonenumber"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btn_to_editaccount"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Edit Akun"
                android:textSize="15sp"
                android:backgroundTint="@color/green"/>
            <Button
                android:id="@+id/btn_to_editprofile"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:textSize="15sp"
                android:backgroundTint="@color/green"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atur Alamat Pengiriman"
            android:textSize="15sp"
            android:backgroundTint="@color/green"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_to_address"
            />
    </LinearLayout>
</FrameLayout>